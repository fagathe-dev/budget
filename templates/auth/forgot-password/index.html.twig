{% extends 'auth.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}

{% block main %}
    <div class="row text-align-center">
        <div class="col-lg-12">
            <div class="text-center mt-sm-5 mb-4 text-white-50">
                <div class="fs-24">
                    <a class="d-inline-block auth-logo text-white" href="{{ path('app_default') }}">
                        $hine {% if app.environment != 'prod' %} - <span>{{ APP_VERSION }}</span> {% endif %}
                    </a>
                </div>
                <div class="mt-3 fs-15 fw-medium">Gérer mes dépenses du quotidien</div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h1 class="text-primary h5">Oups !</h1>
                        <p class="text-muted">Vous avez oublié votre mot de passe.</p>
                    </div>
                    {% include "components/flashes.html.twig" %}
                    <div class="mt-3 p-2">
                        {{ form(form) }}
                    </div>
                    <div class="border"></div>
                    <div class="mt-4 text-center">
                        <p class="mb-0">
                            Vous vous souvenez de votre mot de passe.
                            <a href="{{ path('app_login') }}" class="fw-semibold text-primary text-decoration-underline"> 
                                Connectez-vous ! 
                            </a> 
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
