{% extends 'auth.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4">
                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h1 class="text-primary h5">Inscription</h1>
                        <p class="text-muted">Rejoignez-nous pour gérer votre budget en toute sérénité.</p>
                    </div>
                    {% include "components/flashes.html.twig" %}
                    <div class="mt-3 p-2">
                        {{ form(form) }}
                    </div>
                    <div class="border"></div>
                    <div class="mt-4 text-center">
                        <p class="mb-0">
                            Vous avez déjà un compte ? 
                            <a href="{{ path('app_login') }}" class="fw-semibold text-primary text-decoration-underline"> 
                                Connectez-vous ! 
                            </a> 
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
