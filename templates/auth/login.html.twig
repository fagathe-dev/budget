{% extends 'auth.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block main %}

    <div class="row text-align-center">
        <div class="col-lg-12">
            <div class="text-center mt-sm-5 mb-4 text-white-50">
                <div class="fs-24">
                    <a class="d-inline-block auth-logo text-white" href="{{ path('app_default') }}">
                        $hine
                    </a>
                </div>
                <div class="mt-3 fs-15 fw-medium">Gérer mes dépenses du quotidien</div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4">
                <div class="card-body p-4">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible shadow fade show" role="alert">
                                <small>{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endif %}


                        <div class="text-center mt-2">
                            <h1 class="text-primary h5">Connexion</h1>
                            <p class="text-muted">Accéder à votre espace personnel.</p>
                        </div>
                        <div class="mt-3 p-2">
                            <div class="mb-3">
                                <label for="email">Adresse e-mail</label>
                                <input 
                                    type="email" 
                                    value="{{ lastUsername }}" 
                                    name="email" 
                                    id="email" 
                                    class="form-control" 
                                    autocomplete="email" 
                                    placeholder="Adresse e-mail"
                                    required 
                                    autofocus
                                >
                            </div>
                            <div class="mb-3">
                                <div class="float-end">
                                    <a href="a#" class="text-muted">Mot de passe oublié?</a>
                                </div>
                                <label for="password" class="form-label">Mot de passe</label>
                                <div class="position-relative auth-pass-inputgroup mb-3">
                                    <input 
                                        type="password" 
                                        name="password" 
                                        id="password" 
                                        class="form-control" 
                                        autocomplete="current-password" 
                                        placeholder="Mot de passe"
                                        required
                                    >
                                    <button 
                                        class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted shadow-none password-addon" 
                                        type="button" 
                                        id="password-addon"
                                    ><i class="ri-eye-fill align-middle"></i></button>
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                                <label class="form-check-label" for="_remember_me">Remember me</label>
                            </div>
                        </div>
    
                        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                        <div class="mt-1 mb-4">
                            <button class="btn btn-success w-100" type="submit">
                                Envoyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
