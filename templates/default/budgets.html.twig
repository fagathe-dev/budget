<div class="budget-container">
    <h1 class="h3">Mes budgets</h1>
    <div class="my-3 budget-repeater" id="budgetsContainer">
    </div> 
</div>

<template id="budgetTemplate">
    <div class="col-xl-3 col-md-6 col-10">
        <div class="card card-animate">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <p data-budget-category-name class="text-uppercase fw-medium text-muted mb-0"></p>
                    </div>
                    <div class="flex-shrink-0">
                        <a 
                            data-budget-edit
                            href="#" 
                            class="btn btn-ghost-primary btn-icon btn-sm dropdown shadow-none"
                            title="Modifier mon budget "
                        ><i class="ri-pencil-fill"></i></a>
                    </div>
                </div>
                <div class="d-flex align-items-end justify-content-between mt-4">
                    <div class="ff-secondary fs-22 fw-semibold">
                        <span data-budget-expenses-sum class="budget-expenses"></span> 
                        &euro; /
                        <span data-budget-amount class="budget-amount fs-15 fw-light"></span>
                    </div>
                    <div class="avatar-sm flex-shrink-0">
                        <span class="avatar-title bg-light rounded fs-3">
                            <i data-budget-category-icon class="text-success icon-dual-succes"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>
